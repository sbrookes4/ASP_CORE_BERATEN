        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Recreational Data</span><span asp-validation-for="HistoricalRecreationalData"></span>
                <textarea asp-for="HistoricalRecreationalData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Nutritional Description</span><span asp-validation-for="HistoricalNutritionalDesc"></span>
                <textarea asp-for="HistoricalNutritionalDesc" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Legal Issues Description</span><span asp-validation-for="HistoricalLegalIssuesDesc"></span>
                <textarea asp-for="HistoricalLegalIssuesDesc" class="form-control" style="height:100px"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label class="control-checkbox">
                    <span>Mark as completed. (And lock this Assessment as Read Only)</span>
                    <input type="checkbox" asp-for="IsCompleted" />
                    <div class="checkbox-label"></div>
                </label>
            </div>
        </div>
    </div>
</div>

<input type="hidden" asp-for="RecordedBy" value="@User.Identity.Name" />
<input type="hidden" asp-for="RecordedOn" value="@System.DateTime.Now" />