    <div class="panel-heading"><strong>Historical</strong></div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-9">
                <span>Historical Substance Abuse Data</span><span asp-validation-for="HistoricalSubstanceAbuseData"></span>
                <textarea asp-for="HistoricalSubstanceAbuseData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Medication Data</span><span asp-validation-for="HistoricalMedicationData"></span>
                <textarea asp-for="HistoricalMedicationData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Family Data</span><span asp-validation-for="HistoricalFamilyData"></span>
                <textarea asp-for="HistoricalFamilyData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Developmental Data</span><span asp-validation-for="HistoricalDevelopmentalData"></span>
                <textarea asp-for="HistoricalDevelopmentalData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Behavioral Data</span><span asp-validation-for="HistoricalBehavioralData"></span>
                <textarea asp-for="HistoricalBehavioralData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Emotional Data</span><span asp-validation-for="HistoricalEmotionalData"></span>
                <textarea asp-for="HistoricalEmotionalData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Social Data</span><span asp-validation-for="HistoricalSocialData"></span>
                <textarea asp-for="HistoricalSocialData" class="form-control" style="height:100px"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <span>Historical Psychiatric Data</span><span asp-validation-for="HistoricalPsychiatricData"></span>
