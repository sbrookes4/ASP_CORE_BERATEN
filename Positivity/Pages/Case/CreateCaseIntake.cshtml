@page "{clientId}"

@model Positivity.Pages.Case.CreateCaseIntakeModel

@section SideMenu {@{ await Html.RenderPartialAsync("Common/_DashboardMenuPartial", new MenuModel { Identifier = "" }); }}

@Html.Partial("Common/_PageTitlePartial", "New Case Intake")

@{ViewData["Title"] = "Create";}

<form method="post">

    @Html.Partial("_CaseIntakePartial", Model.CaseIntakeData)

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12 text-right">
                    <input type="submit" value="Save" class="btn btn-blueTwo" />
                    <a href="@Navigator.ClientDetails/@Model.CaseIntakeData.ClientId" class="btn btn-sliverOne">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }}