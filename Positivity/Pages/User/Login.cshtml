@page
@model Positivity.Pages.User.LoginModel
@{

    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Login - Positivity</title>

    <environment names="Development, Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Development, Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>
</head>
<body>
    <form method="post">

        <div class="row">
            <div class="login-panel">

                <h2>Enter Your Credentials</h2><hr />
                <div class="form-group">
                    <lable>Login ID</lable><span asp-validation-for="UserLogin.LoginID" class="text-danger"></span>
                    <input class="form-control" asp-for="UserLogin.LoginID" type="text" placeholder="User Name" />
                </div>
                <div class="form-group">
                    <lable>Password</lable><span asp-validation-for="UserLogin.Password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="UserLogin.Password" placeholder="Password" />
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-aquaOne"> Log In </button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </form>

    <environment names="Development,Production">
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>

    <footer class="footer">
        <img src="~/images/Logo.png" style="display:block; margin:5px auto;" />
        <h4 align="center"><i> Think. Focus. Thrive.</i></h4>

        <p align="center">P O S I T I V I T Y  ~  from <span style="color:red"><a href="http://www.beratensoftware.com/" target="_blank">Beraten Software Corporation</a> - </span> &copy; @DateTime.Now.Year - All Rights Reserved.</p>
    </footer>
</body>
</html>