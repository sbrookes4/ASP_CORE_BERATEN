@model BeratenHealthcareModels.Client

@inject BeratenHealthcareDataInterfaceLib.ILookup LookupMan

<div asp-validation-summary="All" class="text-danger"></div>

<div class="panel panel-default">
    <div class="panel-body">

        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-3">
                <span>First Name</span><span asp-validation-for="FirstName"></span>
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-3">
                <span>Middle Name</span><span asp-validation-for="MiddleName"></span>
                <input type="text" asp-for="MiddleName" class="form-control" />
            </div>
            <div class="col-md-3">
                <span>Last Name</span><span asp-validation-for="LastName"></span>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <span>Alias</span><span asp-validation-for="Alias"></span>
                <input type="text" asp-for="Alias" class="form-control" />
            </div>
            <div class="col-md-3">
                <span>SSN</span><span asp-validation-for="SSN"></span>
                @(Html.Kendo().MaskedTextBoxFor(Model => Model.SSN)
                                                                  .Mask("000-00-0000")
                                                                  .HtmlAttributes(new { @class = "form-control" })
                )
            </div>
            <div class="col-md-3">
                <span>Date of Birth</span><span asp-validation-for="DateOfBirth" class="text-danger"></span>
                <kendo-datepicker max="@TimeZoneUtility.DateTimeNow" for="DateOfBirth" class="form-control" style='width: 100%;' />
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <span>Gender</span><span asp-validation-for="GenderLookupId"></span>
                <select asp-for="GenderLookupId" asp-items="@LookupMan.GetGenderList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="col-md-3">
                <span>Race</span><span asp-validation-for="RaceLookupId"></span>
                <select asp-for="RaceLookupId"
                        asp-items="@LookupMan.GetRaceList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="col-md-3">
                <span>Ethnicity Hispanic</span><span asp-validation-for="EthnicityHispanicLookupId"></span>
                <select asp-for="EthnicityHispanicLookupId"
                        asp-items="@LookupMan.GetEthnicityList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <span>Marital Status</span><span asp-validation-for="MaritalStatusLookupId"></span>
                <select asp-for="MaritalStatusLookupId"
                        asp-items="@LookupMan.GetMaritalStatusList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="col-md-3">
                <span>Special Needs</span><span asp-validation-for="SpecialNeedsLookupId"></span>
                <select asp-for="SpecialNeedsLookupId"
                        asp-items="@LookupMan.GetSpecialNeedsList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="col-md-3">
                <span>Preferred Language</span><span asp-validation-for="PreferredLanguageLookupId"></span>
                <select asp-for="PreferredLanguageLookupId"
                        asp-items="@LookupMan.GetPreferredLanguageList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
        </div>

        <div class="row" style="margin:10px 0px">
            <label>Address</label>
        </div>

        <div class="row">
            <div class="col-md-6">
                <span>Address</span><span asp-validation-for="Address" class="text-danger"></span>
                <input type="text" asp-for="Address" class="form-control" />
            </div>
            <div class="col-md-3">
                <span>City</span><span asp-validation-for="City" class="text-danger"></span>
                <input type="text" asp-for="City" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <span>State</span>
                <select asp-for="StateLookupId"
                        asp-items="@LookupMan.GetStateList().Select(x => new SelectListItem { Text = x.Description, Value = x.Id.ToString()})" class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="col-md-3">
                <span>Zip</span><span asp-validation-for="Zip" class="text-danger"></span>
                <input type="text" asp-for="Zip" class="form-control" />
            </div>
            <div class="col-md-3">
                <span>County</span>
                <input type="text" asp-for="County" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <span>Primary Phone</span><span asp-validation-for="PrimaryPhone" class="text-danger"></span>
                @(Html.Kendo().MaskedTextBoxFor(Model => Model.PrimaryPhone).HtmlAttributes(new { @class = "form-control" }).Mask("(999) 000-0000") )
            </div>
            <div class="col-md-3">
                <div> &nbsp;</div>
                <label class="control-checkbox">
                    <span>Can Leave Msg</span>
                    <input type="checkbox" asp-for="CanLeaveMsgOnPriPhone" />
                    <div class="checkbox-label"></div>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <span>Secondary Phone</span><span asp-validation-for="SecondaryPhone" class="text-danger"></span>
                @(Html.Kendo().MaskedTextBoxFor(Model => Model.SecondaryPhone).HtmlAttributes(new { @class = "form-control" }).Mask("(999) 000-0000") )
            </div>
            <div class="col-md-3">
                <div> &nbsp;</div>
                <label class="control-checkbox">
                    <span>Can Leave Msg</span>
                    <input type="checkbox" asp-for="CanLeaveMsgOnSecPhone" />
                    <div class="checkbox-label"></div>
                </label>
            </div>
        </div>
        <input type="hidden" asp-for="RecordedBy" value="@User.Identity.Name" />
        <input type="hidden" asp-for="RecordedOn" value="@System.DateTime.Now" />
    </div>
</div>